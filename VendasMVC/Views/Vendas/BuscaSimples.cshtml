@model IEnumerable<VendasMVC.Models.Venda>

@{
    ViewData["Title"] = "BuscaSimples";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewData["Title"]</h2>

<nav class="navbar navbar-inverse">

    <div class="container-fluid">

        <form class="navbar-form navbar-left" role="search">

            <div class="form-group">
                <div class="form-group">
                    <label for="dtInicial">Data Inicial</label>
                    <input type="date" name="dtInicial" class="form-control" value=@ViewData["dtInicial"]/>
                </div>

                <div class="form-group">
                    <label for="dtInicial">Data Final</label>
                    <input type="date" name="dtFinal" class="form-control" value=@ViewData["dtFinal"]/>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Filtrar</button>
        </form>

    </div>

</nav> 

<div class="panel panel-primary">

    <div class="panel-heading">
        <h3 class="panel-title">Total vendas = @Model.Sum(x => x.Valor).ToString("C2")</h3>
    </div>

    <div class="panel-body">

        <table class="table table-striped table-hover">
            <thead>

                <tr class="success">

                    <th>
                        @Html.DisplayNameFor(x => x.Id)
                    </th>

                    <th>
                        @Html.DisplayNameFor(x => x.Data)
                    </th>

                    <th>
                        @Html.DisplayNameFor(x => x.Valor)
                    </th>

                    <th>
                        @Html.DisplayNameFor(x => x.Vendedor.Nome)
                    </th>
                </tr>

            </thead>

            <tbody>

                @foreach (var obj in Model)
                {

                    <tr>
                        <td>
                            @Html.DisplayFor(x => obj.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(x => obj.Data)
                        </td>
                        <td>
                            @Html.DisplayFor(x => obj.Valor)
                        </td>
                        <td>
                            @Html.DisplayFor(x => obj.Vendedor.Nome)
                        </td>
                    </tr>
                }

            </tbody>

        </table>

    </div>

</div>



