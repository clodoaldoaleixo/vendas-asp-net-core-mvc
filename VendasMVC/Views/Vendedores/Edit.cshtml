@model VendasMVC.Models.ViewModels.VendedorViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

<h4>Vendedor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Vendedor.Id" />
            <div class="form-group">
                <label asp-for="Vendedor.Nome" class="control-label"></label>
                <input asp-for="Vendedor.Nome" class="form-control" />
                <span asp-validation-for="Vendedor.Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Vendedor.Email" class="control-label"></label>
                <input asp-for="Vendedor.Email" class="form-control" />
                <span asp-validation-for="Vendedor.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Vendedor.DataNascimento" class="control-label"></label>
                <input asp-for="Vendedor.DataNascimento" class="form-control" />
                <span asp-validation-for="Vendedor.DataNascimento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Vendedor.SalarioBase" class="control-label"></label>
                <input asp-for="Vendedor.SalarioBase" class="form-control" />
                <span asp-validation-for="Vendedor.SalarioBase" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Vendedor.Departamento" class="control-label"></label>
                <select asp-for="Vendedor.DepartamentoId" asp-items="@{new SelectList(Model.Departamentos, "Id", "Nome")}" class="form-control"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

